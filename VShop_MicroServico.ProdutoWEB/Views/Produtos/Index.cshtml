@model IEnumerable<VShop_MicroServico.ProdutoWEB.Models.ProdutoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Produto</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th style="text-align:right">
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th style="text-align:right">
                Ações
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoriaNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                
            <td style="text-align:right">
                <a asp-action="Edit" asp-route-id="@item.Id" title="Editar" class="btn btn-warning">
                    <span class="fas fa-edit"></span>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" title="Deletar" class="btn btn-danger">
                    <span class="fas fa-trash-alt"></span>
                </a>
                @*@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })*@
            </td>
            </tr>
        }
    </tbody>
</table>
