@model VShop_MicroServico.ProdutoWEB.Models.ProdutoViewModel

<form method="post" asp-action="Adicionar">
    <input asp-for="Id" hidden />
    <h3 class="mb-5">Detalhes do Produto</h3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" src="/images/@Model.ImagemURL">
            <input asp-for="ImagemURL" hidden="hidden" />
        </div>
        <div class="col-md-4">
            <h3>@Model.Nome</h3>
            <p class="mb-4">@Model.Descricao</p>
            <p class="mb-4 text-black">
                <b>
                    @Model.Preco.ToString("C")&nbsp;(@Model.Estoque items )
                </b>
            </p>
            <div class="row">
                <div class="col-5 col-md-5 mb-5">
                    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                </div>
                @if (@Model.Estoque > 0)
                {
                    <div class="col-5 col-md-5">
                        <button type="submit" class="btn btn-outline-success">Add to Cart</button>
                    </div>
                }
                else
                {
                    <div class="col-5 col-md-5">
                        <button type="submit" class="btn btn-outline-success" disabled>Add to Cart</button>
                        <p>Estoque em Reposição</p>
                    </div>
                }
            </div>
        </div>
    </div>
</form>


